<div class="container-lg">

  <div class="row row-cols-1 row-cols-md-2 g-4 shadow-sm ">
    <% @posts.each do |post| %>
      <div class="col">
        <div class="card">
          <img src='<%= post.image %>' class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= post.name %></h5>
                <p class="card-text"><%= post.title %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group input">
                    <span class="input-group-text" id="addon-wrapping"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                      <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                      <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                    </svg><%= post.comments.count%></span>
                    <%= link_to 'Переглянути', post, class: "btn btn-dark" %> 
                    
                  </div>
                  <small class="text-body-secondary"><%= post.author.first_name %></small>
                </div>
            </div>
          </div>
        </div>
    <% end %>
</div>

