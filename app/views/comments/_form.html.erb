<% if author_signed_in?%>
<%= form_with model: [ @post, @comment], data: {turbo: false } do |f| %>
  <%= f.label :author_id %>
  <%= f.collection_select :author_id, Author.all, :id, :first_name %>
  <%= f.hidden_field :parent_id, value: params[:comment_id] if params[:comment_id].present?%>
    <div class="container-fluid py-5">
      <div class="input-group">
        <span class="input-group-text">Напишіть свій коментар</span>
          <%= f.text_area :body, class: 'form-control' %>
          <%= f.submit "Опублікувати", class: 'btn btn-secondary' %>
        </div>
      </div>
<% end %>
<% else %>
  <div class="position-relative overflow-hidden p-3 p-md-2 m-md-1 text-center bg-body-tertiary">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
      <p class="lead fw-normal">Хочете переглянути та додати коментар? У війдіть в сессію або зареєструйтесь.</p>
      <a class="btn btn-outline-secondary" href="http://localhost:3000/authors/new">Зареєстурватись</a>
    </div>
  </div>
  
<%end%>